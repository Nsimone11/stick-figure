package Oracle_Assignments;

import javax.swing.*;

public class JavaLibsPractice {
    public static void main(String[] args) {
        // TODO code application logic here
        String name = JOptionPane.showInputDialog("Enter your name");
        JOptionPane.showInputDialog("Your name is : " + name + ", yes or no?");


        String color = JOptionPane.showInputDialog("What is your favorite color?");
        JOptionPane.showInputDialog("Your favorite color is " + color + ", yes or no?");

        String input1 = (String)JOptionPane.showInputDialog(null,
                "Favorite food?",
                "Food",
                2,
                null,
                null,
                "Type it here:");
        JOptionPane.showInputDialog("Your favorite food is: " + input1 + ", yes or no?");

        String[] acceptableValues = {"July", "August", "September"};
        String input2 = (String)JOptionPane.showInputDialog(null,
                "What month are we in?",
                "Dialog Title",
                2,
                null,
                acceptableValues,
                acceptableValues[2]);
        JOptionPane.showInputDialog("You said: " + input2 + ", yes or no?");

        String firstNumber =
                JOptionPane.showInputDialog( "Enter a number" );
        String secondNumber =
                JOptionPane.showInputDialog( "Enter a second number" );

        int number1 = Integer.parseInt( firstNumber );
        int number2 = Integer.parseInt( secondNumber );

        int sum = number1 + number2;

        JOptionPane.showMessageDialog( null, "The sum of the numbers is " + sum,
                "Sum of Two Integers", JOptionPane.INFORMATION_MESSAGE );


        String mult1 =
                JOptionPane.showInputDialog("Enter another number for multiplication");
        String mult2 =
                JOptionPane.showInputDialog("Enter a second number for multiplication");

        double equate1 = Double.parseDouble( mult1 );
        double equate2 = Double.parseDouble( mult2 );

        double ans = equate1 * equate2;

        JOptionPane.showMessageDialog( null, "The sum of the numbers is " + ans,
                "Sum of Two Integers", JOptionPane.INFORMATION_MESSAGE );

    }
}
